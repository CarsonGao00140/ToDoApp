<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoAppMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button Text="Go To Registration"
                    SemanticProperties.Hint="Navigate to the registration page"
                    Clicked="OnRegistrationClicked"
                    HorizontalOptions="Fill" />

            <Button Text="Go To Login"
                    SemanticProperties.Hint="Navigate to the login page"
                    Clicked="OnLoginClicked"
                    HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
